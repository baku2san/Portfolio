<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>latest</LangVersion>
        <RootNamespace>Portfolio</RootNamespace>

        <!-- GitHub Pages 対応 -->
        <StaticWebAssetBasePath>/</StaticWebAssetBasePath>

        <!-- プロジェクト情報 -->
        <AssemblyTitle>Portfolio</AssemblyTitle>
        <Product>Portfolio Site</Product>
        <Description>C# .NET開発者のポートフォリオサイト。Blazor WebAssemblyで構築されたモダンなWebアプリケーション。</Description>
        <Copyright>Copyright (c) 2025</Copyright>
        <Version>1.0.0</Version>
        <Authors>Portfolio Developer</Authors>

        <!-- ドキュメント生成 -->
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.0" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer"
            Version="9.0.0" PrivateAssets="all" />
    </ItemGroup>

</Project>
